{
  "name": "signalk-daily-gpx-plugin",
  "version": "0.3.0",
  "description": "Records your track and generates either daily or per-voyage GPX files",
  "keywords": [
    "signalk-node-server-plugin",
    "signalk-webapp",
    "signalk-category-utility"
  ],
  "signalk-plugin-enabled-by-default": false,
  "signalk": {
    "appIcon": "assets/icon-72x72.png",
    "displayName": "SignalK Daily GPX Plugin"
  },
  "license": "MIT",
  "author": "Jeremy Waters <jaffadog@gmail.com>",
  "main": "plugin/index.cjs",
  "type": "commonjs",
  "scripts": {
    "test": "mocha",
    "format": "npx prettier . --write",
    "format:check": "npx prettier . --check",
    "lint": "eslint .",
    "build:web": "vite build",
    "build:plugin": "rollup -c",
    "build": "npm run build:web && npm run build:plugin",
    "dev": "vite",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@protomaps/basemaps": "^5.7.0",
    "@tmcw/togeojson": "^7.1.2",
    "@xmldom/xmldom": "^0.8.11",
    "better-sqlite3": "^11.9.1",
    "bootstrap": "^5.3.8",
    "leaflet": "^1.9.4",
    "proj4": "^2.19.10",
    "protomaps-leaflet": "^5.1.0",
    "simplify-js": "^1.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaffadog/signalk-daily-gpx-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/jaffadog/signalk-daily-gpx-plugin/issues"
  },
  "homepage": "https://github.com/jaffadog/signalk-daily-gpx-plugin",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-json": "^6.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "mocha": "^11.7.4",
    "prettier": "3.6.2",
    "rollup": "^4.53.1",
    "sass-embedded": "^1.93.3",
    "vite": "^7.1.7"
  }
}
